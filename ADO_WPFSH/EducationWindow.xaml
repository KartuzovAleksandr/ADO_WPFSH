<Window x:Class="ADO_WPFSH.EducationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_WPFSH"
        mc:Ignorable="d"
        Title="EducationWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" IsReadOnly="False" 
                  CanUserAddRows="True" />
        <Button x:Name="SaveChanges" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Click="SaveChanges_Click" Margin="10" Padding="5,5,5,5"/>
    </Grid>
</Window>
